

<div id="available">
<h2>Available Burgers</h2>

<ol>
  {{#each burgers}}
    
    {{#unless this.devoured}}

        <li class="availableList">{{this.burger_name}}
        
         <form action="/{{this.id}}?_method=PUT" method="POST" class="devouredButton">
         <input type="text" placeholder="Enter Your Name to Eat" name="costumerName">
          <input type="hidden" name="devoured" value="true">
          <button type="submit" >Devoured</button>
        </form>

      </li>
      
    {{/unless}}
  {{/each}}

</div>

<div id="devoured">
<h2>Devoured Burgers</h2>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li class="devouredList">
        {{this.burger_name}} > > > > devoured by {{this.costumer.costumerName}} 
      </li>
    {{/if}}
  {{/each}}
</ol>
</div>


<div id="newBurger">
<hr>
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burgerInput">Burger Name:</label>
    <input type="text" id="burgerInput" name="burger_name">
  </div>

  <button id="burgerButton" type="submit">Add Burger</button>
</form>
</div>
